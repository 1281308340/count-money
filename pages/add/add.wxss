.btnBox{
  background: #fed955;
  display: flex;
  justify-content: center
}
.btnBox view{
  width: 140rpx;
  height: 60rpx;
  font-size: 20rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #000;
}
.btn1{
  margin-right: 4rpx;
  border-radius: 8rpx 0 0 8rpx 
}
.btn2{
  border-radius: 0 8rpx 8rpx 0 
}
.active{
  background: #000;
  color: #fed955
}
.tip{
  width: 100rpx;
  height: 60rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 60rpx;
  background: #fed955;
  border-radius: 8rpx ;
  margin: 20rpx 40rpx
}
.tipbox{
  display: flex;
  flex-wrap: wrap
}
.inputBox{
  border-top:1px solid #000 ;
  border-bottom: 1px solid #000
}
.red{
  color: green
}
.inputBox{
  display: flex
}
.inputBox>view{
  flex: 1
}
.on{
  background: #000;
  color: #fff;
}
.msg{
  width: 100%;
  height: 50rpx;
  border:1px solid #000
}